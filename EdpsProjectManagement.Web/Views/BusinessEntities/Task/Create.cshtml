@using EdpsProjectManagement.Web.HtmlExtensions

@model EdpsProjectManagement.Web.Models.BusinessEntities.TaskModel

@{
    ViewBag.Title= "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="m_title_box">
    <ol>
        <li data-id="Create">
            <a href="#">Task_Create</a><i class="icon-arrowright"></i>
        </li>
        <li data-id="Create">Create</li>
    </ol>
</div>
<div class="panel panel-default">
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.OwnerId)
			<div class="row">
			    <div class="col-md-6">
			        <div class="form-group">
			            <label for="Name" class="col-md-4 from-title">Name</label>
			            <div class="col-md-8 from-cont">
			                @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
				     @Html.ValidationMessageFor(model => model.Name)
			            </div>
			        </div>
			    </div>
			    <div class="col-md-6">
			        <div class="form-group">
			            <label for="Description" class="col-md-4 from-title">Description</label>
			            <div class="col-md-8 from-cont">
			                @Html.TextBoxFor(model => model.Description, new { @class = "form-control" })
				     @Html.ValidationMessageFor(model => model.Description)
			            </div>
			        </div>
			    </div>
			</div>
			<div class="row">
				<div class="col-md-6">
					<div class="form-group">
						<label for="Iteration"  class="col-md-4 from-title" >Iteration</label>
						<div class="col-md-8 from-cont">
							@Html.DropDownListUtilityFor(p => Model.Iteration.Id, new SelectList(Model.Iterations, "Id", "Name", Model.Iteration !=null? (object) Model.Iteration.Id:null),new SelectListItem{Text = "Please Select",Value = "0"}, new { @class = "form-control" })
							@Html.ValidationMessageFor(model => model.Iteration.Id)
						</div>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-md-6">
					<div class="form-group">
						<label for="Repository"  class="col-md-4 from-title" >Repository</label>
						<div class="col-md-8 from-cont">
							@Html.DropDownListUtilityFor(p => Model.Repository.Id, new SelectList(Model.Repositorys, "Id", "Name", Model.Repository !=null? (object) Model.Repository.Id:null),new SelectListItem{Text = "Please Select",Value = "0"}, new { @class = "form-control" })
							@Html.ValidationMessageFor(model => model.Repository.Id)
						</div>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-md-6">
					<div class="form-group">
						<label for="ActualHours"  class="col-md-4 from-title" >ActualHours</label>
						<div class="col-md-8 from-cont">
							@Html.TextBoxFor(model => model.ActualHours, new { @class = "form-control" })
							@Html.ValidationMessageFor(model => model.ActualHours)
						</div>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-md-6">
					<div class="form-group">
						<label for="Assignee"  class="col-md-4 from-title" >Assignee</label>
						<div class="col-md-8 from-cont">
							@Html.TextBoxFor(model => model.Assignee, new { @class = "form-control" })
							@Html.ValidationMessageFor(model => model.Assignee)
						</div>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-md-6">
					<div class="form-group">
						<label for="EstimateHours"  class="col-md-4 from-title" >EstimateHours</label>
						<div class="col-md-8 from-cont">
							@Html.TextBoxFor(model => model.EstimateHours, new { @class = "form-control" })
							@Html.ValidationMessageFor(model => model.EstimateHours)
						</div>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-md-6">
					<div class="form-group">
						<label for="ImportDateTime"  class="col-md-4 from-title" >ImportDateTime</label>
						<div class="col-md-8 from-cont">
							@Html.TextBoxFor(model => model.ImportDateTime , "{0:yyyy-MM-dd}" , new { @class = "form-control", @readonly = "readonly" })
							@Html.ValidationMessageFor(model => model.ImportDateTime)
						</div>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-md-6">
					<div class="form-group">
						<label for="Label"  class="col-md-4 from-title" >Label</label>
						<div class="col-md-8 from-cont">
							@Html.TextBoxFor(model => model.Label, new { @class = "form-control" })
							@Html.ValidationMessageFor(model => model.Label)
						</div>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-md-6">
					<div class="form-group">
						<label for="ReleaseTarget"  class="col-md-4 from-title" >ReleaseTarget</label>
						<div class="col-md-8 from-cont">
							@Html.TextBoxFor(model => model.ReleaseTarget, new { @class = "form-control" })
							@Html.ValidationMessageFor(model => model.ReleaseTarget)
						</div>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-md-6">
					<div class="form-group">
						<label for="RemainHours"  class="col-md-4 from-title" >RemainHours</label>
						<div class="col-md-8 from-cont">
							@Html.TextBoxFor(model => model.RemainHours, new { @class = "form-control" })
							@Html.ValidationMessageFor(model => model.RemainHours)
						</div>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-md-6">
					<div class="form-group">
						<label for="Status"  class="col-md-4 from-title" >Status</label>
						<div class="col-md-8 from-cont">
							@Html.TextBoxFor(model => model.Status, new { @class = "form-control" })
							@Html.ValidationMessageFor(model => model.Status)
						</div>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-md-6">
					<div class="form-group">
						<label for="UniqueLink"  class="col-md-4 from-title" >UniqueLink</label>
						<div class="col-md-8 from-cont">
							@Html.TextBoxFor(model => model.UniqueLink, new { @class = "form-control" })
							@Html.ValidationMessageFor(model => model.UniqueLink)
						</div>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-md-6">
					<div class="form-group">
						<label for="WorkDate"  class="col-md-4 from-title" >WorkDate</label>
						<div class="col-md-8 from-cont">
							@Html.TextBoxFor(model => model.WorkDate , "{0:yyyy-MM-dd}" , new { @class = "form-control", @readonly = "readonly" })
							@Html.ValidationMessageFor(model => model.WorkDate)
						</div>
					</div>
				</div>
			</div>
            <div class="width_10 text-center m_left">
                <input class="m_btn m_back" type="submit" value="Save" onclick="return onSubmit()"  />
                @Html.ActionLink("Cancel", "Index", null, new {@class="m_btn m_back"})
            </div>
        }
    </div>
</div>

@section scripts{
    <script>
        $(document).ready(function() {
		metaShare.DateFormat.format($("#ImportDateTime"), "@Model.ImportDateTime");
		metaShare.DateFormat.format($("#WorkDate"), "@Model.WorkDate");
        });
			
			function onSubmit() {
			}
    </script>
}

